<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.BookApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#7AB482</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorPrimaryFixed">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SpecificCornerRounded">
        <item name="cornerSizeTopRight">75dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small" />

    <style name="CustomDisabledChip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

</resources>